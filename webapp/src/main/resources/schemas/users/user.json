{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Representation of a User",
  "type": "object",
  "properties": {
    "id": {
      "description": "The ID of the User",
      "type": "string"
    },
    "created": {
      "description": "When the User record was first created",
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "description": "When the User record was last updated",
      "type": "string",
      "format": "date-time"
    },
    "enabled": {
      "description": "Whether the user account is enabled",
      "type": "boolean"
    },
    "verified": {
      "description": "Whether the user account has been verified",
      "type": "boolean"
    },
    "profile": {
      "description": "The users profile information",
      "$ref": "profile.json"
    }
  },
  "required": [
    "id",
    "created",
    "updated",
    "enabled",
    "verified",
    "profile"
  ],
  "additionalProperties": false
}