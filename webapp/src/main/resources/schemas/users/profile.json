{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Representation of a users profile information",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the User",
      "type": "string"
    },
    "email": {
      "description": "The email address of the User",
      "type": "string",
      "format": "email"
    }
  },
  "required": [
    "name",
    "email"
  ],
  "additionalProperties": false
}