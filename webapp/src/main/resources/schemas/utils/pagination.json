{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Pagination controls",
  "type": "object",
  "properties": {
    "total": {
      "description": "The total number of records that matched",
      "type": "integer",
      "minimum": 0
    },
    "offset": {
      "description": "The offset of the first record in this resultset. Zero indexed",
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "total",
    "offset"
  ],
  "additionalProperties": false
}